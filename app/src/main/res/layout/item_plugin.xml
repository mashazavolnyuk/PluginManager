<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/size_icon_adapter"
        android:layout_height="@dimen/size_icon_adapter"
        android:contentDescription="@string/icon"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_icon_adapter"
        android:layout_marginStart="@dimen/min_margin_between_elements"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textSize="@dimen/size_text" />

    <RelativeLayout
        android:layout_width="@dimen/size_icon_adapter"
        android:layout_height="@dimen/size_icon_adapter"
        android:layout_gravity="center_vertical">

        <Switch
            android:id="@+id/switchEnableApp"
            android:layout_width="@dimen/size_icon_adapter"
            android:layout_height="@dimen/size_icon_adapter"
            android:layout_centerInParent="true"
            android:clickable="true" />

        <ProgressBar
            android:id="@+id/progressEnableApp"
            android:layout_width="@dimen/size_icon_adapter"
            android:layout_height="@dimen/size_icon_adapter"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>